{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "hosting",
    "rewrites": [
      {
        "source": "/api/v1/ping",
        "function": "ping"
      },
      {
        "source": "/api/v1/authorize",
        "function": "authorize"
      },
      {
        "source": "/api/v1/allowapp",
        "function": "allowapp"
      },
      {
        "source": "/api/v1/verify",
        "function": "verify"
      },
      {
        "source": "/api/v1/email",
        "function": "email"
      },
      {
        "source": "/api/v1/username",
        "function": "username"
      },
      {
        "source": "/api/v1/agendas",
        "function": "agendas"
      },
      {
        "source": "/api/v1/agendas/?*",
        "function": "agenda"
      },
      {
        "source": "/api/v1/tags/?*",
        "function": "tags"
      },
      {
        "source": "/api/v1/tags/?*/?*",
        "function": "tag"
      },
      {
        "source": "/api/v1/tasks/?*",
        "function": "tasks"
      },
      {
        "source": "/api/v1/tasks/?*/?*",
        "function": "task"
      },
      {
        "source": "/api/v1/revoke/?*",
        "function": "revoke"
      },
      {
        "source": "/api/v1/createdapps",
        "function": "newapp"
      },
      {
        "source": "/api/v1/newapp",
        "function": "newapp"
      },
      {
        "source": "/api/v1/createdapps/?*/secret",
        "function": "generatesecret"
      }
    ]
  },
  "database": {
    "rules": "database.rules.json"
  }
}
